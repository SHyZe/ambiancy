<div id="comment_product-<%= comment_product.id %>">
	[<%= comment_product.created_at.strftime("%A %e %B %Y") %>]
	<%= comment_product.user.username %>
	<% if user_signed_in? %>
		<% if current_user && current_user == current_user.user ||current_user.admin? %>
		<%= link_to "Supprimer", method: :delete, remote: true, class: 'btn btn-sm btn-danger' %>
		<% end %>
	<% end %>
	<hr>
	<%= comment_product.content %>
</div>