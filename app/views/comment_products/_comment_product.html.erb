<div id="comment_product-<%= comment_product.id %>">
	<small>le <%= l(comment_product.created_at.to_date, format: :long) %></small>
	<b>
		<%= comment_product.user.username %>
	</b>
	<% if user_signed_in? %>
		<% if comment_product.user_id == current_user.id || current_user.admin? %>
			<%= link_to "Supprimer", product_comment_product_path(@product, comment_product), method: :delete, remote: true, class: 'btn btn-sm btn-danger' %>
		<% end %>
	<% end %>
	<p>
		<%= comment_product.content %>
	</p>
	<hr>
</div>