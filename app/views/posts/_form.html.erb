<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
		<%= f.input :image, as: :file %>
    <%= f.input :title, class: 'form-control' %>
    <%= f.input :content, class: 'form-control' %>
    <%= select_tag(:category_post, options_for_select(@category_posts), :prompt => "Choisissez une Catégorie", class: 'form-control') %>
    <%#= f.association :category_post, prompt: "Choisissez une Catégorie", class: '' %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
