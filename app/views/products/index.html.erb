<div class="container mt-5" style="padding: 80px 0;">
	<div class="row">
		<div class="col">
			<div class="col py-4 m-0">

				<div class="field">
					<h1>Tous mes Produits
						<!-- <small class="p_count text-muted">
								<%# @products.each do |product| %>
									<%#= pluralize(product.comment_products.count, "Commentaire") %>
								<%# end %>
						</small> -->
					</h1>
					<p>
						<%= form_tag products_path, method: :get do %>
							<%= text_field_tag :search, params[:search] %>
							<%= submit_tag "Rechercher" %>
						<% end %>
					</p>
				</div>

					<table class="table table-striped">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Description</th>
							<th>Prix</th>
							<th>Categorie</th>
							<th>Commentaire(s)</th>
							<!-- <th>User</th> -->
							<th colspan="3">Actions</th>
						</tr>
					</thead>

					<tbody>
						<% @products.each do |product| %>
							<tr>
								<td><%= product.name %></td>
								<td><%= truncate(product.description, length: 100) %></td>
								<td><%= product.price %></td>
								<td><%= product.category_product.name %></td>
								<td><%= product.comment_products.count %></td>
								<!-- <td><%#= product.user.username %></td> -->
								<td><%= link_to 'Voir plus', product, class: 'btn btn-sm btn-info' %></td>
								<% if current_user || current_user.admin %>
									<td><%= link_to 'Editer', edit_product_path(product), class: 'btn btn-sm btn-warning' %></td>
									<td><%= link_to 'Supprimer', product, method: :delete, data: { confirm: 'ÃŠtes vous sure de vouloir supprimer ce Produit ?' }, class: 'btn btn-sm btn-danger' %></td>
								<% end %>
							</tr>
						<% end %>
					</tbody>
				</table>

				<br>

				<%= link_to 'Ajouter un nouveau Produit', new_product_path %>
			</div>
		</div>
	</div>
</div>
