<div class="container" style="margin-top: 80px">
	<div class="row">
		<div class="col-12" align="center">
			<h1>Mon Profil</h1>
			<hr>
			<% @users = User.all.each do |user| %>
					<div class="col-6">
						<p class="d-flex justify-content-between py-4">
								<%= image_tag user.avatar.url(:medium) %>
								<span class="text-right mt-5">
									<%= user.username %>
									<br>
									<%= user.email %>
									<br>
									<%= user.pays %>
									<br>
									<%= user.ville %>
									<br>
									<%= user.telephone %>
									<br>
									<%= user.zipcode %>
								</span>
						</p>
					</div>
				<div class="col-8">
					<hr>
					<p>
						Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ducimus cum eaque corrupti minus est qui ipsum dignissimos cupiditate error quo deserunt, accusantium culpa ullam sit id animi provident, modi nulla.
					</p>
				</div>
			<% end %>
			<hr>
		</div>
	</div>
</div>